<!DOCTYPE html>
<html>
<head>
  <title>Play</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= debug flash[:error] %>

<% if user_signed_in? %>
  <%= link_to 'Sign Out', destroy_user_session_path, method: :delete%>
<% else %>
  <%= link_to 'Sign in', new_user_session_path %>
  <%= link_to 'Sign Up', new_user_registration_path %>
<% end %>

<% if admin_user_signed_in? %>
  <%= link_to 'Admin Sign Out', destroy_admin_user_session_path, method: :delete%>
<% else %>
  <%= link_to 'Admin Sign in', new_admin_user_session_path %>
  <%= link_to 'Admin Sign Up', new_admin_user_registration_path %>
<% end %>

<%= yield %>

</body>

</html>
